<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="outerlayout">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginEnd">25dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    <style name="text" parent="AppTheme">
        <item name="android:textColor">@color/colorAccent</item>
    </style>
    <style name="TitleText" parent="@style/text">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="labelText" parent="@style/text">
        <item name="android:layout_marginTop">10dp</item>
    </style>
    <style name="button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>
    <style name="active_icon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

</resources>
