<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_brew_type"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:columnCount="2"
    app:rowCount="3"
    tools:context="com.makman.cup.activities.BrewTypeActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1">
        <Button
            android:id="@+id/activity_brew_type_button_french_press"
            android:layout_centerInParent="true"
            android:layout_width="40dp"
            android:layout_height="69dp"
            android:background="@drawable/ic_french_press"/>
        <TextView
            android:id="@+id/activity_brew_type_textview_french_press"
            android:layout_below="@id/activity_brew_type_button_french_press"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            style="@style/text"
            android:text="french press"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1">
        <Button
            android:id="@+id/activity_brew_type_button_chemex"
            android:layout_centerInParent="true"
            android:layout_width="38dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_chemex"/>
        <TextView
            android:id="@+id/activity_brew_type_textview_chemex"
            android:layout_below="@id/activity_brew_type_button_chemex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            style="@style/text"
            android:text="chemex"/>
    </RelativeLayout>
    <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_columnWeight="1"
    app:layout_rowWeight="1">
    <Button
        android:id="@+id/activity_brew_type_button_aeropress"
        android:layout_centerInParent="true"
        android:layout_width="34dp"
        android:layout_height="60dp"
        android:background="@drawable/ic_aeropress"/>
    <TextView
        android:id="@+id/activity_brew_type_textview_aeropress"
        android:layout_below="@id/activity_brew_type_button_aeropress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        style="@style/text"
        android:text="aeropress"/>
</RelativeLayout>    <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_columnWeight="1"
    app:layout_rowWeight="1">
    <Button
        android:id="@+id/activity_brew_type_button_pour_over"
        android:layout_centerInParent="true"
        android:layout_width="34dp"
        android:layout_height="60dp"
        android:background="@drawable/ic_pour_over"/>
    <TextView
        android:id="@+id/activity_brew_type_textview_pour_over"
        android:layout_below="@id/activity_brew_type_button_pour_over"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        style="@style/text"
        android:text="pour over"/>
</RelativeLayout>    <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_columnWeight="1"
    app:layout_rowWeight="1">
    <Button
        android:id="@+id/activity_brew_type_button_cold_brew"
        android:layout_centerInParent="true"
        android:layout_width="49dp"
        android:layout_height="60dp"
        android:background="@drawable/ic_cold_brew"/>
    <TextView
        android:id="@+id/activity_brew_type_textview_cold_brew"
        android:layout_below="@id/activity_brew_type_button_cold_brew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        style="@style/text"
        android:text="cold brew"/>
</RelativeLayout>
    <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_columnWeight="1"
    app:layout_rowWeight="1">
    <Button
        android:id="@+id/activity_brew_type_button_espresso"
        android:layout_centerInParent="true"
        android:layout_width="55dp"
        android:layout_height="60dp"
        android:background="@drawable/ic_espresso"/>
    <TextView
        android:id="@+id/activity_brew_type_textview_espresso"
        android:layout_below="@id/activity_brew_type_button_espresso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        style="@style/text"
        android:text="espresso"/>
</RelativeLayout>
</android.support.v7.widget.GridLayout>
