<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.makman.cup">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_cup"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.BrewTypeActivity" />
        <activity android:name=".activities.FrenchPressActivity" />
        <activity android:name=".activities.InstructionActivity"></activity>
    </application>

</manifest>